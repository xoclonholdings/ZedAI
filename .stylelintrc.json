{
    "extends": [
        "stylelint-config-standard"
    ],
    "customSyntax": "postcss-html",
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "layer",
                    "import"
                ]
            }
        ],
        "function-no-unknown": [
            true,
            {
                "ignoreFunctions": [
                    "theme",
                    "screen"
                ]
            }
        ]
    }
}