{
  "compilerOptions": {
  "target": "ES2020",
  "downlevelIteration": true,
  "module": "ESNext",
  "moduleResolution": "node",
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "strict": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server/**/*.ts",
    "client/**/*.ts",
    "scripts/**/*.ts",
    "zed/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}